{
  "identifier": "default",
  "description": "Default capability for text-editor",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:allow-open",
    "dialog:allow-save",
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-dir",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-watch",
      "allow": [
        {
          "path": "$HOME/**"
        },
        {
          "path": "/**"
        }
      ]
    },
    "fs:allow-unwatch"
  ]
}